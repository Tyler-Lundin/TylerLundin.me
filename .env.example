# Email delivery
# Preferred: Brevo (Sendinblue)
BREVO_API_KEY=your_brevo_api_key

# Optional fallback: Resend
RESEND_API_KEY=your_resend_api_key

# Where to send inquiries
CONTACT_TO=msg@tylerlundin.me
CONTACT_FROM=inquiry@tylerlundin.me

# Optional public hint (not required)
# NEXT_PUBLIC_CONTACT_TO=

# Public business details used for schema
# Example: +1-509-555-1234
NEXT_PUBLIC_BUSINESS_PHONE=

# Public GBP review link (optional)
# Example: https://search.google.com/local/writereview?placeid=...
NEXT_PUBLIC_GBP_REVIEW_URL=

# Next.js env notes:
# - Put secrets only in server env (no NEXT_PUBLIC_ prefix)
# - Server Actions will read from process.env at runtime

# Google Analytics (GA4)
# Example: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=
